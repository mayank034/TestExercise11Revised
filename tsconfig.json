{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "outDir": "./dist",
      "baseUrl": ".",
      "paths": {
      "@api/*": [
        "src/api/*"
      ],
      "@core/*": [
        "src/core/*"
      ],
      "@config/*": [
        "src/config/*"
      ],
      "@database/*": [
        "src/database/*"
      ]
    },
      "allowJs": true,
      "target": "es5",
      "lib": ["es6"]
    },
    "include": ["./src/**/*"]
  }